doctype html
head
 title="Real Time Web Chat"
 link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/sandstone/bootstrap.min.css')
 link(rel='stylesheet', href='/css/style.css')
 script(src="https://code.jquery.com/jquery-3.1.1.js"   integrity="sha256-16cdPddA6VdVInumRGo6IbivbERE8p7CQR3HzTBuELA="   crossorigin="anonymous")
 script(src="/js/bootstrap.js")
 script(src="/js/main.js")
 script(src="/socket.io/socket.io.js")
body
 nav.navbar.navbar-inverse
  .container
   .navbar-header
    button-navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
    span.sr-only Toggle navigation
    span.icon-bar
    span.icon-bar
    span.icon-bar
   a.navbar-brand(href='#') eChat
  #navbar-collapse.navbar-collapse
   ul.nav.navbar-nav
  .container
   .row
    .col-md-8
     #userFormWrap
      h1 Create Username
      form#userForm
       input#username.form-control(type='text', placeholder='Enter Username')
       br
       button.btn.btn-default(type='submit') Submit
     #mainWrap
      h1 Speak Your Mind
      form#chatForm
       .form-group
       textarea#chatInput.form-control(name='body', placeholder='Say SOmething...')
       br
       button.btn.btn-default(type='submit') Submit
       br
       br
      #chatWindow.well
    .col-md-4
     h3 Chat Users
     ul.list-group
      #users
      